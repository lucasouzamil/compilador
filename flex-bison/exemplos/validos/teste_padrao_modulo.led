// Recursos Testados: Operador módulo (%), variáveis para controlar estado, e if/else para renderização condicional.

strip 60
offset = 0

loop forever {
    for i = 0..59 {
        // Pinta de branco se o índice + offset for múltiplo de 3
        if ((i + offset) % 3 == 0) {
            set i color #FFFFFF
        } else {
            set i color #111111 // Cinza escuro
        }
    }

    // Atualiza o offset para mover o padrão
    offset = offset + 1

    wait 100ms
}